.index-playbox {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #151515;
  transform: translate3d(0, calc(100% - 40px), 0);
  transition: all 0.4s;
  padding-top: 69rpx;
  z-index: 4;
}
.index-playbox.show {
  padding-top: 0;
  transform: translate3d(0, 0, 0);
}
.index-playbox.listshow {
  padding-top: 0;
  transform: translate3d(0, 100%, 0);
  z-index: 1;
}
.index-playbox .ico {
  height: 69rpx;
  width: 69rpx;
  position: absolute;
  top: 0;
  background: #151515;
  left: 50%;
  transform: translate3D(-50%, -30%, 0);
  border-radius: 50%;
  text-align: center;
  line-height: 69rpx;
  z-index: 2;
}
.index-playbox .ico image {
  width: 30.36rpx;
  height: auto;
  vertical-align: top;
  padding-top: 16.56rpx;
}
.index-playbox .play-info {
  transform: translate3d(0, 0, 0);
  transition: all 0.4s;
  position: relative;
  bottom: 0;
}
.index-playbox .play-info .hd {
  display: flex;
  justify-content: space-between;
  padding: 27.6rpx 41.4rpx;
}
.index-playbox .play-info .hd .title {
  font-size: 33.12rpx;
  color: #fff;
  position: relative;
  z-index: 1;
}
.index-playbox .play-info .hd image {
  width: 96.6rpx;
  height: auto;
}
.index-playbox .play-info .bd .btns {
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
}
.index-playbox .play-info .bd .btns image {
  margin: 0 55.2rpx;
  display: block;
}
.index-playbox .play-info .bd .btns .prev,
.index-playbox .play-info .bd .btns .next {
  width: 41.4rpx;
  height: auto;
}
.index-playbox .play-info .bd .btns .play {
  width: 55.2rpx;
}
.index-playbox .play-info .bd .btns .list {
  width: 44.16rpx;
  height: auto;
  position: absolute;
  left: 41.4rpx;
  bottom: 13.8rpx;
  margin: 0;
}
.index-playbox .play-info .bd .lines {
  padding: 41.4rpx 41.4rpx 57.96rpx;
}
.index-playbox .play-info .bd .lines .timeline {
  height: 4px;
  background: #fff;
  position: relative;
  margin-bottom: 22.08rpx;
  border-radius: 2px;
  margin: 0 22rpx 24rpx;
}
.index-playbox .play-info .bd .lines .timeline .playline {
  height: 4px;
  position: absolute;
  width: 0;
  background: #00D998;
  border-radius: 2px;
  left: 0;
  top: 0;
}
.index-playbox .play-info .bd .lines .timeline .playk {
  position: absolute;
  top: 2px;
  right: 0;
  transform: translate3d(50%, -50%, 0);
  width: 41.4rpx;
  height: 41.4rpx;
  background: #fff;
  border-radius: 50%;
}
.index-playbox .play-info .bd .lines .timeline .playk .loading {
  width: 60%;
  height: 60%;
  display: block;
  transform: translate3d(-50%, -50%, 0);
  position: absolute;
  left: 50%;
  top: 50%;
}
.index-playbox .play-info .bd .lines .playtime {
  font-size: 27.6rpx;
  color: #ABABAB;
  float: left;
  line-height: 1;
}
.index-playbox .play-info .bd .lines .alltime {
  font-size: 27.6rpx;
  color: #ABABAB;
  float: right;
  line-height: 1;
}
.list-info {
  transform: translate3d(0, 100%, 0);
  transition: all 0.4s;
  height: calc(100vh - 130rpx);
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #151515;
  z-index: 1;
}
.list-info .ico {
  height: 69rpx;
  width: 69rpx;
  position: absolute;
  top: 0;
  background: #151515;
  left: 50%;
  transform: translate3D(-50%, -30%, 0);
  border-radius: 50%;
  text-align: center;
  line-height: 69rpx;
  z-index: 2;
}
.list-info .ico image {
  width: 30.36rpx;
  height: auto;
  vertical-align: top;
  padding-top: 16.56rpx;
}
.list-info.listshow {
  transform: translate3d(0, 0, 0);
  z-index: 4;
}
.list-info .scrolllist {
  height: calc(100vh - 260rpx);
}
.list-info .title {
  font-size: 33.12rpx;
  color: #fff;
  line-height: 1;
  padding: 41.4rpx;
  border-bottom: 1px solid #ABABAB;
}
.list-info .item {
  margin: 0 41.4rpx;
  display: flex;
  height: 91.08rpx;
  font-size: 27.6rpx;
  color: #fff;
  align-items: center;
  border-bottom: 1px solid #ababab;
}
.list-info .item .listid {
  margin-right: 22.08rpx;
}
.list-info .item .name {
  flex: 1;
  margin-right: 27.6rpx;
}
.list-info .item .time {
  color: #ababab;
  width: 207rpx;
}
.list-info .item .remove {
  width: 35.88rpx;
  height: 35.88rpx;
}
.list-info .item.on {
  color: #00D998;
}
.list-info .item.on .time {
  color: #00D998;
}
